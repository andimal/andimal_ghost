{{!< default}}

<main class="content" role="main">

    <article class="{{post_class}}">

        {{#post}}

        <span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD"}}</time></span>
        <span class="tags">
            {{#foreach tags}}
                <p class="tag">{{name}}</p>
            {{/foreach}}
        </span>

        <h1 class="post-title">{{{title}}}</h1>

        <section class="post-content">
            {{content}}
        </section>

        {{/post}}

    </article>

</main>