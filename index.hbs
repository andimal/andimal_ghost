{{!< default}}

<main class="content" role="main">

    {{#foreach posts}}

    <a class="post-link" href="{{url}}">
        <article class="{{post_class}}">
            <h2 class="post-title">{{{title}}}</h2>
            
            <span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD"}}</time></span>
            <span class="tags">
                {{#foreach tags}}
                    <p class="tag">{{name}}</p>
                {{/foreach}}
            </span>

            <p class="post-excerpt">{{excerpt words="40"}}... &rarr;</p>
        </article>
    </a>

    {{/foreach}}

</main>